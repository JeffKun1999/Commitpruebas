@model TacoslaEnredada_JRMJSC.Models.Usuario
@{
    Layout = null;
}

<h1> <center>Unete a la Familia Tacos la Enredada </center></h1>

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1"> <!-- Correct the "Registro" to "viewport" and "widht" to "width" -->
    <title>Registro</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css"
          integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
</head>
<body>
    <div class="container mt-5 pt-5">
        <div class="col-12 col-xl-4 col-md-6 mx-auto">
            <div class="card">
                <div class="card-header">
                    Registrate
                </div>
                <div class="card-body">
                    <form asp-controller="Login" asp-action="Registro" method="post" enctype="multipart/form-data">
                        <input class="form-control mb-3" type="text" placeholder="Nombre Completo" asp-for="Nombre" required />
                        <input class="form-control mb-3" type="text" placeholder="Correo Electrónico" asp-for="Correo" required />
                        <input class="form-control mb-3" type="password" placeholder="Contraseña" asp-for="Clave" required />
                        <input class="form-control mb-3" type="text" placeholder="Cedula de Identidad" asp-for="Cedula" required />
                        <span asp-validation-for="Cedula" class="text-danger"></span>
                        <div class="d-grid gap-2 mb-3">
                            <button class="btn btn-primary" type="submit">Regístrate</button>
                        </div>
                        @if (ViewData["Mensaje"] != null)
                        {
                            <div class="form-group">
                                <div class="alert alert-danger" role="alert">
                                    @ViewData["Mensaje"]
                                </div>
                            </div>
                        }
                        ¿Ya tienes una cuenta? <a href="@Url.Action("IniciarSesion","Login")">Iniciar Sesión</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
</html>

